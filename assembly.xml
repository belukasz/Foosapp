<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>app</id>
  <formats>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>true</includeBaseDirectory>

  <dependencySets>
    <dependencySet>
      <outputDirectory>jars</outputDirectory>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <directory>${basedir}/src/main/resources</directory>
      <includes>
        <include>*</include>
      </includes>
      <outputDirectory>resources</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>